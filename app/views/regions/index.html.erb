<div class="row">
  <div class="col-md-12">
    <h2>지역 목록</h2>   
    <h4>총 <%= @regions.size %> 개의 지역이 검색되었습니다.</h4>
  </div>
</div>
<!-- /. ROW  -->
<hr />
           
<div class="row">
  <div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-default">
      <div class="panel-heading">
        지역 목록 표
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>아이디</th>
                <th>도</th>
                <th>구</th>
                <th>동</th>
                <th>위도</th>
                <th>경도</th>
                <th>상세보기</th>
                <th>수정하기</th>
                <th>삭제하기</th>
              </tr>
            </thead>
            <tbody>
              <% @regions.each do |region| %>
              <tr class="<%= cycle('even', 'odd') -%>">
                <td><%= region.region_id %></td>
                <td><%= region.do %></td>
                <td><%= region.gu %></td>
                <td><%= region.dong %></td>
                <td><%= region.longitude %></td>
                <td><%= region.latitude %></td>
                <td align="center"><%= link_to '상세', region, class: "btn btn-primary btn-xs" %></td>
                <td align="center"><%= link_to '수정', edit_region_path(region), class: "btn btn-warning btn-xs" %></td>
                <td align="center"><%= link_to '삭제', region, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>       
      </div>
    </div>
    <!--End Advanced Tables -->
  </div>
</div>              
<%= link_to '지역 추가하기', new_region_path, class: "btn btn-primary" %>
<%= javascript_tag do %>
  $('#dataTables-example').dataTable();
<% end %>

