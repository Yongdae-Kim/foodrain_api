<div class="row">
  <div class="col-md-12">
    <h2>리뷰 목록</h2>   
    <h4>총 <%= @reviews.size %> 개의 리뷰가 검색되었습니다.</h4>
  </div>
</div>
<!-- /. ROW  -->
<hr />
           
<div class="row">
  <div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-default">
      <div class="panel-heading">
        리뷰 목록 표
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>아이디</th>
                <th>매장 이름(아이디)</th>
                <th>내용</th>
                <th>평점</th>
                <th>상세보기</th>
                <th>수정하기</th>
                <th>삭제하기</th>
              </tr>
            </thead>
            <tbody>
              <% @reviews.each do |review| %>
              <tr class="<%= cycle('even', 'odd') -%>">
                <td><%= review.review_id %></td>
                <td><%= review.store.name %>(<%= review.store.store_id %>)</td>
                <td><%= review.detail %></td>
                <td><%= review.grade %></td>
                <td align="center"><%= link_to '상세', review, class: "btn btn-primary" %></td>
                <td align="center"><%= link_to '수정', edit_review_path(review), class: "btn btn-warning" %></td>
                <td align="center"><%= link_to '삭제', review, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>       
      </div>
    </div>
    <!--End Advanced Tables -->
  </div>
</div>              
<%= link_to '리뷰 추가하기', new_review_path, class: "btn btn-primary" %>
<%= javascript_tag do %>
  $('#dataTables-example').dataTable();
<% end %>