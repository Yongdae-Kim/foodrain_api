<div class="row">
  <div class="col-md-12">
    <h2>사용자 목록</h2>   
    <h4>총 <%= @users.size %> 명의 사용자가 검색되었습니다.</h4>
  </div>
</div>
<!-- /. ROW  -->
<hr />
           
<div class="row">
  <div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-default">
      <div class="panel-heading">
        사용자 목록 표
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>사진</th>
                <th>아이디</th>
                <th>이메일</th>
                <th>닉네임</th>
                <th>휴대폰번호</th>
                <th>성별</th>
                <th>상세보기</th>
                <th>수정하기</th>
                <th>삭제하기</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr class="<%= cycle('even', 'odd') -%>">
                <td align="center">
                <% if user.image.present? %>
                  <img src= <%= user.image.image.url %> width="100" height="100">
                <% else %>
                  이미지 없음
                <% end %> 
                </td>
                <td><%= user.user_id %></td>
                <td><%= user.email %></td>
                <td><%= user.nickname %></td>
                <td><%= user.phone %></td>
                <td><%= user.gender %></td>
                <td align="center"><%= link_to '상세', user, class: "btn btn-primary" %></td>
                <td align="center"><%= link_to '수정', edit_user_path(user), class: "btn btn-warning" %></td>
                <td align="center"><%= link_to '삭제', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>       
      </div>
    </div>
    <!--End Advanced Tables -->
  </div>
</div>              
<%= link_to '사용자 추가하기', new_user_path, class: "btn btn-primary" %>
<%= javascript_tag do %>
  $('#dataTables-example').dataTable();
<% end %>