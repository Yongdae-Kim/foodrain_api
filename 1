class Store < ApplicationRecord
  has_many :images, as: :imageable
  belongs_to :common_code

  scope :code, lambda { |id|
    self[:holiday] = CommonCode.find_by_code('CATEGORY', id)
    # where(category_id: detail_id)
    # CommonCode.find_by_code("CATEGORY", detail_id)
  }

  def category
    CommonCode.find_by_code('CATEGORY', category_id)
  end

end
